{
  "manifest_version": 2,
  "version": "0.0.1",
  "name": "markdown-publish",
  "description": "Publish markdown to IPFS in Brave Browser",
  "permissions": [
    "<all_urls>",
    "tabs",
    "webRequest",
    "webRequestBlocking"
],
  "background": {
    "scripts": ["service-worker.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Markdown Publish"
  },
  "icons": {
    "16": "icon.png"
  }
}
